    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:gravity="center"
    android:backgroundTint="#f7f6f6"
    tools:context="com.geekbounty.realtimeassettrackingdisplay.AuthorisedUserActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/toplogo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to The Phone Tracker Display Interface\nAssigned to Authorised Personel Only"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>

</LinearLayout>
